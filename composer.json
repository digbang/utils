{
    "name": "digbang/utils",
    "description": "Utility belt for your Laravel project",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Darío Govergun",
            "email": "dgovergun@digbang.com"
        },
        {
            "name": "Juan Falcón",
            "email": "jfalcon@digbang.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "laravel/framework": "5.4.*|5.5.*",
        "laravel-doctrine/fluent": "^1.1",
        "laravel-doctrine/orm": "^1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.7",
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Digbang\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Digbang\\Utils\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "./vendor/bin/phpunit",
            "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ]
    }
}
